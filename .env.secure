# Tawnia Healthcare Analytics - Secure Environment Configuration
# IMPORTANT: Rename this file to .env and update all values before deployment

# =============================================================================
# CRITICAL SECURITY SETTINGS - MUST BE CHANGED FOR PRODUCTION
# =============================================================================

# JWT Authentication (CHANGE IMMEDIATELY)
JWT_SECRET=CHANGE_ME_TO_A_STRONG_256_BIT_SECRET_KEY_FOR_PRODUCTION_USE_RANDOM_GENERATOR
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Secret Key (CHANGE IMMEDIATELY)
SECRET_KEY=CHANGE_ME_TO_A_STRONG_SECRET_KEY_FOR_PRODUCTION_USE_RANDOM_GENERATOR

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=127.0.0.1
PORT=8000
DEBUG=false
ENVIRONMENT=production
WORKERS=4
RELOAD=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Settings (Restrict in production)
ALLOWED_ORIGINS=["https://tawnia.brainsait.io"]
ALLOWED_HOSTS=["tawnia.brainsait.io", "localhost"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900
MAX_REQUESTS_PER_MINUTE=60

# File Security
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=[".xlsx", ".xls", ".csv", ".json"]
UPLOAD_DIRECTORY=uploads
MAX_FILES_PER_REQUEST=5

# Authentication Settings
PASSWORD_MIN_LENGTH=12
ENABLE_2FA=true
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Session Security
SESSION_TIMEOUT_MINUTES=60
ENABLE_CSRF_PROTECTION=true

# =============================================================================
# API INTEGRATIONS (Optional)
# =============================================================================

# OpenAI Integration (Optional - Remove if not needed)
# OPENAI_API_KEY=your_openai_api_key_here_if_needed

# =============================================================================
# DATABASE & CACHING
# =============================================================================

# Redis Configuration (Optional)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here
# REDIS_DB=0

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
ENABLE_ACCESS_LOGS=true
LOG_SENSITIVE_DATA=false

# Monitoring
ENABLE_MONITORING=true
ENABLE_METRICS=true
HEALTH_CHECK_TIMEOUT=30

# =============================================================================
# FEATURES
# =============================================================================
ENABLE_AI_INSIGHTS=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_COMPRESSION=true

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Cloudflare (Optional)
# CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
# CLOUDFLARE_ZONE_ID=your_zone_id_here

# SSL/TLS
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline'"
CSP_STYLE_SRC="'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://fonts.googleapis.com"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self' https://fonts.gstatic.com"

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=365
GDPR_COMPLIANCE=true