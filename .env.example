# Tawnia Healthcare Analytics - Environment Configuration

# Server Configuration
PORT=3000
HOST=127.0.0.1
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-secret-key-change-in-production-12345

# OpenAI Configuration (Optional - for AI-powered insights)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_FILES=10

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900  # 15 minutes in seconds

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Database Configuration (Optional)
# DATABASE_URL=sqlite:///./healthcare_analytics.db

# Analysis Configuration
ANALYSIS_TIMEOUT=300  # 5 minutes in seconds
BATCH_SIZE=1000

# AI Configuration
AI_FALLBACK_ENABLED=true
AI_CONFIDENCE_THRESHOLD=0.7

# Report Configuration
DEFAULT_REPORT_FORMAT=pdf
INCLUDE_CHARTS_DEFAULT=true

# Directory Configuration
UPLOAD_DIR=uploads
REPORTS_DIR=reports
DATA_DIR=data
LOGS_DIR=logs

# File Upload Configuration
MAX_FILE_SIZE=50mb
ALLOWED_EXTENSIONS=.xlsx,.xls,.csv
UPLOAD_TIMEOUT=300000

# OpenAI Configuration (Optional - for enhanced AI insights)
# Uncomment and add your API key to enable OpenAI integration
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4o-mini

# Rate Limiting Configuration
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60

# Security Configuration
HELMET_CSP_ENABLED=true
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# Analysis Configuration
ANALYSIS_TIMEOUT=60000
ENABLE_ADVANCED_PATTERNS=true
DATA_QUALITY_THRESHOLD=75

# Report Configuration
REPORT_RETENTION_DAYS=30
AUTO_CLEANUP_REPORTS=true

# Performance Configuration
COMPRESSION_ENABLED=true
STATIC_CACHE_MAX_AGE=86400000
